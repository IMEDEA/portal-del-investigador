# Actualiza los codigos de RRHH de los usuarios
10 00 * * * adminges cd /opt/proyectos/investigacion && ./virtualenv/bin/python manage.py sync_rrhh
# Actualiza los estados del CVN
10 01 * * * adminges cd /opt/proyectos/investigacion && ./virtualenv/bin/python manage.py update_all_status_cvn
# Calcula las estadisticas del CVN e incluye las categorias profesionales
10 02 * * * adminges cd /opt/proyectos/investigacion && ./virtualenv/bin/python manage.py calc_stats
# Actualiza el listado de Proyectos y Convenios desde SIGIDI
10 03 * * * adminges cd /opt/proyectos/investigacion && ./virtualenv/bin/python manage.py update_projects_and_agreements
# Insercion tardia de nuevos CVNs
*/10 * * * * adminges cd /opt/proyectos/investigacion && ./virtualenv/bin/python manage.py insert_all_cvn
